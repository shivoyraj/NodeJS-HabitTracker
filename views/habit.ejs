<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/script.js"></script>
  <title>Habit Tracker</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Habit Tracker</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container mt-5">
    <h3 id="allHabit">All Habits</h3>
    <div class="calendar">
      <div class="header">
        <button id="prev" onclick="location.href='/habits/previousWeekRecords'">&lt;</button>
        <span id="month"><%= currentMonth %> : <%= currentYear %></span>
        <button id="next" onclick="location.href='/habits/nextWeekRecords'">&gt;</button>        
        <table class="table">
          <thead>
            <tr>
              <th>Name of Habit</th>
              <th>Sun</th>
              <th>Mon</th>
              <th>Tue</th>
              <th>Wed</th>
              <th>Thu</th>
              <th>Fri</th>
              <th>Sat</th>
            </tr>
            <tr>
              <th></th>
              <% currentWeekDates.forEach(date => { %>
                <th><%= date %></th>
              <% }) %>
            </tr>
          </thead>
          <tbody id="dates">
            <% allHabitsObj.forEach(function(habit) { %>
              <tr>
                <td>
                  <%= habit.title %>
                </td>
                <% habit.record.forEach(function(entry) { %>
                  <% if (currentWeekDates.includes(entry.date.toDateString())) { %>
                    <td id = '<%= habit._id %>,<%= entry._id %>' onclick="changeStatus('<%= habit._id %>', '<%= entry._id %>')">
                      <% if (entry.status === 'Done') { %>
                        <span class = 'icon'>&#x2705;</span>
                      <% } else if (entry.status === 'Not done') { %>
                        <span class = 'icon' >&#x274C;</span>
                      <% } else { %>
                        <span class = 'icon' >&#9608;</span>
                      <% } %>
                    </td>
                  <% } %>
                <% }) %>
              </tr>
            <% }) %>
          </tbody>
          
      </div>
    </div>
    <script src="/js/script.js"></script>
</body>

</html>